@import "actix"
@import "read"

.carbon-ads, .bsa-cpc-wrapper, .bsa-cpc {
    display: none;
}

.navbar, .nav-links, .links, .front,  button, #news {
    background: linear-gradient(315deg,  #e5e6f8 0%,  #e5e6f8 100%);
    border: none;
}

.site-name, .navbar a {
    color: #7B463D;
    font-weight: bold;
}

.content div[class*="language-"] {
    background-color: #1D0D00;
}
.content code {
    color: #7B463D;
}

.front {
    padding-top: 4rem;
    max-height: 600px;
}

.home .hero {
    color: #7B463D !important;
}
.home .description {
    color: #7B463D !important;
}

.home #news {
    width: 100%;
    text-align: center;
    font-size: 2rem;
}
.home #news a {
    font-weight: bold;
    color: #7B463D;
}

.home .topic {
    padding: 0.8rem 1.5rem;
}

.home .topic a, .home .qzone {
    font-size: 1.3rem;
    font-weight: bold;
    color: #7B463D;
}

.home .qzone {
    padding: 0.5rem 1rem;
    font-weight: normal;
    color:  #000000 ;
}

::-webkit-scrollbar {
    width: 4px;
    height: 1px;
    background-color: #F5F5F5;
}
 
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 16px rgba(0,0,0,.3);
    background-color: #8AC3421;
}

@media (max-width: 420px) {
    .content div[class*="language-"] {
        margin: 0.2rem;
    }
}
