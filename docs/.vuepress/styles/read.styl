#read-title, #read-join, #read-more {
    background: linear-gradient(315deg,  #f5c4d4 0%,  #c4f5ed 100%);
    border: none;
}

#read-title {
    margin-top: 3rem;
    text-align: center;
}
#read-title #word {
    font-size: 2.2rem;
    font-weight: bold;
    color: #7B463D;
    padding: 2rem 0;
    line-height: 2.5rem; 
}

#read-join, #read-more {
    text-align: center;
    font-size: 2rem;
}
#read-join a, #read-more a {
    font-weight: bold;
    color: #7B463D;
}

#read h4 #date {
    padding: 0  0.5rem  0 1rem;
    font-size: 0.8rem; 
    border-left: 8px solid green;
    border-radius: 50%;
}